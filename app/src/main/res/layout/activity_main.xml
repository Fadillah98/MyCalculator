<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@android:color/darker_gray"
        android:orientation="vertical">

    <TextView
            android:id="@+id/tvCount"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:gravity="right"
            android:textSize="70dp"
            android:text="0"
            android:padding="50dp"
            android:textColor="@android:color/white"/>

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="bottom"
            android:orientation="vertical">

        <TableRow
                android:id="@+id/row1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/btnAC"
                    android:text="AC"
                    android:onClick="btnOnClick"/>

            <Button
                    android:id="@+id/btnPN"
                    android:text="+/-"
                    android:onClick="btnPNOnClick"/>

            <Button
                    android:id="@+id/btnMod"
                    android:text="%"
                    android:onClick="btnOpOnClick"/>

            <Button
                    android:id="@+id/btnDivide"
                    android:text="/"
                    android:background="@android:color/holo_orange_dark"
                    android:onClick="btnOpOnClick"/>
        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                    android:id="@+id/btn7"
                    android:text="7"
                    android:onClick="btnOnClick"/>
            <Button
                    android:id="@+id/btn8"
                    android:text="8"
                    android:onClick="btnOnClick"/>

            <Button
                    android:id="@+id/btn9"
                    android:text="9"
                    android:onClick="btnOnClick"/>
            <Button
                    android:id="@+id/btnMul"
                    android:text="*"
                    android:background="@android:color/holo_orange_dark"
                    android:onClick="btnOpOnClick"/>
        </TableRow>

        <TableRow
                android:id="@+id/row3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

            <Button
                    android:id="@+id/btn4"
                    android:text="4"
                    android:onClick="btnOnClick"/>
            <Button
                    android:id="@+id/btn5"
                    android:text="5"
                    android:onClick="btnOnClick"/>

            <Button
                    android:id="@+id/btn6"
                    android:text="6"
                    android:onClick="btnOnClick"/>
            <Button
                    android:id="@+id/btnMin"
                    android:text="-"
                    android:background="@android:color/holo_orange_dark"
                    android:onClick="btnOpOnClick"/>
        </TableRow>

        <TableRow
                android:id="@+id/row4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                        android:id="@+id/btn1"
                        android:text="1"
                        android:onClick="btnOnClick"/>
                <Button
                        android:id="@+id/btn2"
                        android:text="2"
                        android:onClick="btnOnClick"/>

                <Button
                        android:id="@+id/btn3"
                        android:text="3"
                        android:onClick="btnOnClick"/>
                <Button
                        android:id="@+id/btnPlus"
                        android:text="+"
                        android:background="@android:color/holo_orange_dark"
                        android:onClick="btnOpOnClick"/>
        </TableRow>

        <TableRow
                android:id="@+id/row5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

            <Button
                    android:id="@+id/btn0"
                    android:text="0"
                    android:layout_span="2"
                    android:onClick="btnOnClick"/>
            <Button
                    android:id="@+id/btnDec"
                    android:text="."
                    android:onClick="btnOnClick"/>

            <Button
                    android:id="@+id/btnEqual"
                    android:text="="
                    android:background="@android:color/holo_orange_dark"
                    android:onClick="btnEqOnClick"/>
        </TableRow>

    </TableLayout>
</LinearLayout>